{$R *.dfm}

procedure TFrmProfissao.btnDeletarClick(Sender: TObject);
begin
  if MessageDlg('Tem certeza que deseja deletar o registro?', mtConfirmation, [mbYes, mbNo], 0) = mrYes then
    begin
      dm.cdsProfissao.Delete;
      ShowMessage('Profissão deletada com sucesso!');
    end;
end;

